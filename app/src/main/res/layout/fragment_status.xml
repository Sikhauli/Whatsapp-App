<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ui.StatusFragment"
    >
  <LinearLayout
      android:id="@+id/myStatusContainer"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toTopOf="@+id/statusContainer"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >
    <ImageButton
        android:id="@+id/imageStatusUpload"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="start|center"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toTopOf="@+id/myStatusContainer"
        app:layout_constraintEnd_toStartOf="@+id/myStatusView"
        app:layout_constraintStart_toStartOf="@+id/myStatusContainer"
        app:layout_constraintTop_toTopOf="@+id/myStatusContainer"

        />

    <TextView
        android:id="@+id/myStatusView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        />


  </LinearLayout>

  <FrameLayout
      android:id="@+id/statusContainer"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/myStatusContainer">


  </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>