<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatsContainer"
    tools:context=".ui.MessageChatFragment"
    android:layout_height="match_parent"
    >

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAlignment="center"
      android:text="@string/username"
      android:textSize="26sp"
      android:textColor="@color/black"
      android:id="@+id/Username"
      app:layout_constraintTop_toTopOf="@+id/chatsContainer"
      app:layout_constraintBottom_toBottomOf="@+id/chatsContainer"
      app:layout_constraintStart_toStartOf="@+id/chatsContainer"
      app:layout_constraintEnd_toEndOf="@+id/chatsContainer"
      />

</androidx.constraintlayout.widget.ConstraintLayout>